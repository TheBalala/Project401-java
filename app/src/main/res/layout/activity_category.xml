<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".Category"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">



        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Categories"


            android:textSize="30sp"
            android:fontFamily="sans-serif"
            android:textAllCaps="true"
            android:padding="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout

                android:id="@+id/electric"
                android:transitionName="electric"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="21dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="21dp"
                android:layout_marginBottom="22dp"
                android:background="@drawable/bg2">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="37dp"
                    android:layout_marginEnd="213dp"
                    android:layout_marginBottom="42dp"
                    android:background="#00000000"
                    android:padding="20dp"
                    android:text="Electricity"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="275dp"
                    android:layout_marginTop="-1dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/lightning" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardBackgroundColor="#00000000"
                    app:cardElevation="8dp"></androidx.cardview.widget.CardView>

            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:id="@+id/water"
                android:transitionName="water"

                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="21dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="21dp"
                android:layout_marginBottom="22dp"
                android:background="@drawable/bg4">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="71dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="37dp"
                    android:layout_marginEnd="193dp"
                    android:layout_marginBottom="42dp"
                    android:background="#00000000"
                    android:padding="20dp"
                    android:text="Water issues"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="275dp"
                    android:layout_marginTop="-1dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/water" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardBackgroundColor="#00000000"
                    app:cardElevation="8dp"></androidx.cardview.widget.CardView>

            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:id="@+id/street"
                android:transitionName="street"

                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="21dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="21dp"
                android:layout_marginBottom="22dp"
                android:background="@drawable/bg1">

                <Button
                    android:layout_width="209dp"
                    android:layout_height="69dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="37dp"
                    android:layout_marginEnd="141dp"
                    android:layout_marginBottom="44dp"
                    android:background="#00000000"
                    android:padding="20dp"
                    android:text="Streets issues"
                    android:textColor="@color/white" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="275dp"
                    android:layout_marginTop="-1dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/street" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardBackgroundColor="#00000000"
                    app:cardElevation="8dp"></androidx.cardview.widget.CardView>

            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RelativeLayout
                android:id="@+id/others"
                android:transitionName="others"

                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="21dp"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="21dp"
                android:layout_marginBottom="22dp"
                android:background="@drawable/bg3">

                <Button
                    android:layout_width="209dp"
                    android:layout_height="69dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="37dp"
                    android:layout_marginEnd="141dp"
                    android:layout_marginBottom="44dp"
                    android:background="#00000000"
                    android:padding="20dp"
                    android:text="Others"
                    android:textColor="@color/black" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="275dp"
                    android:layout_marginTop="-1dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="4dp"
                    android:src="@drawable/more" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"
                    app:cardBackgroundColor="#00000000"
                    app:cardElevation="8dp"></androidx.cardview.widget.CardView>

            </RelativeLayout>
        </RelativeLayout>



    </LinearLayout>
</ScrollView>